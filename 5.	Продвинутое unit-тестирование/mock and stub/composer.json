{
  "name": "raptor/otus-test",
  "license": "MIT",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "8.*",
    "mockery/mockery": "^1.4",
    "roave/security-advisories": "dev-master",
    "phpspec/prophecy": "^1.17",
    "infection/infection": "^0.23.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AppUnitTests\\": "tests/unit/"
    }
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": false
    }
  }
}
